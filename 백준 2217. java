import java.util.*;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int[]arr= new int[n];
		for(int i=0; i<n; i++) {
			arr[i] = sc.nextInt();
		}
		Arrays.sort(arr);
		int max = 0;
		for(int i=0; i<n; i++) {
			int a = n-i;
			int rope = arr[i]*a;
			if(max<rope) {
				max = rope;
			}
		}
		System.out.println(max);
	}
}
